<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>


    <style name="ActionBarStyle" parent="Widget.Design.AppBarLayout">
        <item name="android:elevation">@dimen/action_bar_elevation</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="CityCardStyle" parent="Widget.MaterialComponents.CardView">
        <item name="rippleColor">@color/colorPrimary</item>
        <item name="cardElevation">@dimen/card_elevation</item>
        <item name="cardCornerRadius">@dimen/weather_container_radius</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:stateListAnimator">@animator/animator
        </item>
    </style>

</resources>
